<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundKontrol">

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="75dp"
        android:id="@+id/ileriSensor"
        android:background="@drawable/upbackground"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_marginLeft="30dp"
        android:background="@drawable/leftbackground"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/solSensor"
        android:layout_width="110dp"
        android:layout_height="110dp"
        />

    <Button
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/sagSensor"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/rightbackground"/>

    <Button
        android:layout_marginBottom="75dp"
        android:background="@drawable/downbackground"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/geriSensor"
        android:layout_width="110dp"
        android:layout_height="110dp"
        />

    <Button
        android:background="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:id="@+id/dÃ¶n"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />

    <TextView
        android:id="@+id/text"
        android:textColor="#58AEAC"
        android:fontFamily="@font/iconfont"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:maxLines="3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Wall-e Sensor Control "/>


    <Button
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/walle1"/>

</RelativeLayout>
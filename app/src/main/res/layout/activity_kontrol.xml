<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundKontrol">

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ileri"
        android:background="@drawable/upbackground"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_marginLeft="70dp"
        android:background="@drawable/leftbackground"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/sol"
        android:layout_width="110dp"
        android:layout_height="110dp"
        />

    <Button
        android:layout_marginRight="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/sag"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/rightbackground"/>

    <Button
        android:layout_marginBottom="10dp"
        android:background="@drawable/downbackground"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/geri"
        android:layout_width="110dp"
        android:layout_height="110dp"
     />

    <Button
        android:background="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:id="@+id/dÃ¶n"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />
    
    <Button
        android:id="@+id/kumanda"
        android:background="@drawable/iconkumanda"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/baslat"
        android:layout_toLeftOf="@+id/kumanda"
        android:background="@drawable/icondur"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/kumanda"
        android:background="@drawable/iconbasla"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/text"
        android:textColor="#58AEAC"
        android:fontFamily="@font/iconfont"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="14dp"
        android:maxLines="3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Wall-e Remote Control "/>


    <Button
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/walle1"/>

</RelativeLayout>